<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="3.0" method="upgrade" group="hikashoppayment">
    <name>Cardstream Payment Plugin for Hikashop</name>    
    <version>1.0</version>
    <creationDate>2015-11-03</creationDate>
    <author>Cardstream</author>
    <authorEmail>support@cardstream.com</authorEmail>
    <authorUrl>http://www.cardstream.com/</authorUrl>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <description>This plugin enables you to setup your Cardstream payment system</description>
        <files>
		<filename plugin="cardstream">cardstream.php</filename>
		<filename>cardstream_configuration.php</filename>
		<filename>cardstream_end.php</filename>
	</files>
        <params addpath="/components/com_hikashop/params">
		<param name="pluginoptions" type="pluginoptions" default="plugin" label="hikashop" description="HikaShop options" />
	</params>
        <config>
		<fields name="params" addfieldpath="/components/com_hikashop/fields">
			<fieldset name="basic">
				<field id="pluginoptions" name="pluginoptions" type="pluginoptions" label="hikashop" description="HikaShop options" />
			</fieldset>
		</fields>
	</config>
</extension>